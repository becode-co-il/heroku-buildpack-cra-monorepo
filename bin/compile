#!/bin/sh

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3
HEROKU_DIR=$BUILD_DIR/.heroku

if [ ! -f "$ENV_DIR/APP_FOLDER" ]; then
  echo "APP_FOLDER not set. Aborting."
  exit 1
fi

echo "init ls"
ls

APP_FOLDER="$(cat "$BUILD_DIR/APP_FOLDER")"
echo "APP FOLDER"
echo $APP_FOLDER

cd $APP_FOLDER
echo "AFTER cd APP_FOLDER"
ls
yarn install
yarn build

cp "$APP_FOLDERProcfile" "$BUILD_DIRProcfile"
